{
  "build": {
    "beforeDevCommand": "pnpm dev",
    "beforeBuildCommand": "pnpm build",
    "devPath": "http://localhost:1420",
    "distDir": "../dist",
    "withGlobalTauri": true
  },
  "package": {
    "productName": "android-messages-desktop",
    "version": "6.0.0"
  },
  "tauri": {
    "allowlist": {
      "all": false,
      "shell": {
        "all": false,
        "open": true
      },
      "notification": {
        "all": true
      }
    },
    "bundle": {
      "active": true,
      "icon": [
        "icons/16x16.png",
        "icons/32x32.png",
        "icons/48x48.png",
        "icons/64x64.png",
        "icons/128x128.png",
        "icons/256x256.png",
        "icons/512x512.png",
        "icons/1024x1024.png",
        "icons/icon.icns",
        "icons/icon.ico"
      ],
      "identifier": "pw.kmr.amd",
      "targets": "all"
    },
    "security": {
      "csp": null,
      "dangerousRemoteDomainIpcAccess": [{
        "domain": "messages.google.com",
        "enableTauriAPI": true,
        "windows": ["main"]
      }]
    },
    "updater": {
      "active": false
    },
    "windows": [
      {
        "label": "main",
        "url": "https://messages.google.com/web",
        "fullscreen": false,
        "resizable": true,
        "title": "android-messages-desktop",
        "width": 800,
        "height": 600
      }
    ],
    "systemTray": {
      "iconPath": "icons/tray/icon_mono.png",
      "iconAsTemplate": true
    }
  }
}
